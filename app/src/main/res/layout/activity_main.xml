<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42A5F5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="loginpage.nayan.com.loginpage.MainActivity">

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="118dp"
        android:text="Email" />

    <EditText
        android:id="@+id/etFirstEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvEmail"
        android:layout_alignStart="@+id/tvEmail"
        android:layout_below="@+id/tvEmail"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Please Enter Your Email"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false" />

    <Button
        android:id="@+id/btLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etSecondEditText"
        android:layout_marginTop="20dp"
        android:background="#1565C0"
        android:text="LOGIN" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etFirstEditText1"
        android:layout_alignStart="@+id/etFirstEditText1"
        android:layout_below="@+id/etFirstEditText1"
        android:layout_marginTop="15dp"
        android:text="Password" />

    <EditText
        android:id="@+id/etSecondEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPassword"
        android:layout_alignStart="@+id/tvPassword"
        android:layout_below="@+id/tvPassword"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Please Enter Your Password"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/btCreateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvBottomTextView"
        android:layout_marginTop="19dp"
        android:background="#1565C0"
        android:text="Sine Up" />

    <TextView
        android:id="@+id/tvBottomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btLoginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="Forget your password " />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/icon"
        android:id="@+id/imageView2"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/etFirstEditText1"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
